<resources>
    
    <declare-styleable name="AutoSizeImage">
        <attr name="base_width" format="integer"></attr>
        <attr name="base_height" format="integer"></attr>  
    </declare-styleable>

    <declare-styleable name="ScaledImage">
        <attr name="image_res"/>
        <attr name="image_url"/>
        <attr name="resource_type"/>
        <attr name="scaling_logic"/>
    </declare-styleable>

    <declare-styleable name="ShapedImage">
        <attr name="image_res"/>
        <attr name="image_url"/>
        <attr name="resource_type"/>
        <attr name="scaling_logic"/>
        <attr name="shape"/>

        <attr name="radius_x" format="integer"></attr>
        <attr name="radius_y" format="integer"></attr>
    </declare-styleable>

    <attr name="image_res" format="integer"></attr>
    <attr name="image_url" format="string"></attr>

    <attr name="scaling_logic" format="enum">
        <enum name="fit" value="0" />
        <enum name="crop" value="1" />
    </attr>

    <attr name="resource_type" format="enum">
        <enum name="none" value="0" />
        <enum name="path" value="1" />
        <enum name="resource" value="2" />
    </attr>

    <attr name="shape" format="enum">
        <enum name="none" value="0" />
        <enum name="circle" value="1" />
        <enum name="roundrect" value="2" />
    </attr>
        
</resources>
