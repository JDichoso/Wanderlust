<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_darker_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    
    </style>
    
    <style name="ActionBarTheme" parent="Theme.AppCompat">
        <!-- android:textColorPrimary is the  color of the title text
        in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        
        <!-- android:textColorPrimaryInverse is the  color of the title
        text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->
        
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>        
    </style>
    
    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>
    
    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>
    
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TabIndicator" />

    <style name="TextCaption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
        
    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <!--item name="android:textAlignment">textStart</item-->
    </style>
    
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
        <!-- item name="android:textStyle">@integer/font_textStyle_medium</item-->
        <!--item name="android:fontFamily">@string/font_fontFamily_medium</item-->
        <!--item name="android:textAlignment">viewStart</item-->
    </style>
    
    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <!--item name="android:textAlignment">viewStart</item-->
    </style>
    
    <style name="Text"></style>    
    
    <style name="Text.Display">
        <item name="android:textColor">@color/text_display</item>
    </style>
    
    <style name="Text.Display.Dark">
        <item name="android:textColor">@color/text_display_dark</item>
    </style>
    
    <style name="Text.Display.Regular">
        <item name="android:textSize">@dimen/text_display_size</item>
    </style>
    
    <style name="Text.Display.Small">
        <item name="android:textSize">@dimen/text_body_size</item>
    </style>
    
    <style name="Text.Display.Dark.Regular">
        <item name="android:textSize">@dimen/text_display_size</item>
    </style>
    
    <style name="Text.Headline">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textSize">@dimen/text_headline_size</item>
    </style>
    
    <style name="Text.Headline.Dark">
        <item name="android:textColor">@color/text_regular_dark</item>
    </style>
    
    <style name="Text.Title">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>
    
    <style name="Text.Regular">
        <item name="android:textColor">@color/text_regular</item>
    </style>
    
    <style name="Text.Regular.Subhead">
        <item name="android:textSize">@dimen/text_subhead_size</item>
    </style>
    
    <style name="Text.Regular.Body">
        <item name="android:textSize">@dimen/text_body_size</item>
    </style>
    
    <style name="Text.Regular.Body.Secondary">
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textColor">@color/text_caption</item>
    </style>    
    
    <style name="Text.Caption.Body">
        <item name="android:textSize">@dimen/text_caption_size</item>
    </style>
    
    <style name="NavDrawer"></style>
    
    <style name="NavDrawer.Text"></style>
    
    <style name="NavDrawer.Text.Email" parent="@style/Text.Regular.Body">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>
    
    <style name="NavDrawer.Text.ItemTitle" parent="@style/Text.Regular.Body">
    </style>

    <style name="BorderlessButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextBody</item>

    </style>

</resources>
